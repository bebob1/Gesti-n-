async function openModalFromButton(button) {
    const videoId = button.dataset.videoId;
    const fuenteIdActual = button.dataset.fuenteId;
    const espcadIdActual = button.dataset.espcadId;
    const cadenaDescActual = button.dataset.cadenaDesc;
    
    document.getElementById("videoId").value = videoId;
    document.getElementById("currentFuenteId").value = fuenteIdActual || '';
    document.getElementById("currentEspcadId").value = espcadIdActual || '';
    document.getElementById("editModal").style.display = "block";
    
    try {
        // Cargar departamentos y cadenas
        await loadDepartamentos();
        await loadCadenas();
        
        // Esperar un poco para que los selects se llenen
        await new Promise(resolve => setTimeout(resolve, 500));
        
        // Setear fuente origen (departamento) si existe
        if (fuenteIdActual && fuenteIdActual !== '' && fuenteIdActual !== 'null') {
            setFuenteType('departamento');
            const fuenteSelect = document.getElementById("fuenteDepartamento");
            if (fuenteSelect) {
                fuenteSelect.value = fuenteIdActual.toString();
            }
        }
        
        // Setear cadena si existe (usando espcad_id)
        if (espcadIdActual && espcadIdActual !== '' && espcadIdActual !== 'null') {
            setCadenaType('cadena');
            const cadenaSelect = document.getElementById("cadenaCadena");
            if (cadenaSelect) {
                cadenaSelect.value = espcadIdActual.toString();
            }
        }
    } catch (error) {
        console.error('Error al cargar datos del modal:', error);
        showAlert("Error al cargar los datos. Verifique la conexi√≥n.", "error");
    }
}

function closeModal() {
    document.getElementById("editModal").style.display = "none";
}

