async function openModalFromButton(button) {
    const videoId = button.dataset.videoId;
    const fuenteActual = button.dataset.fuente;
    const categoriaActual = button.dataset.categoria;
    
    document.getElementById("videoId").value = videoId;
    document.getElementById("editModal").style.display = "block";
    
    await Promise.all([loadDepartamentos(), loadCadenas()]);
    
    // Determinar el tipo de fuente y setear valores
    if (fuenteActual) {
        const departamentos = await fetch("/videos/api/departamentos").then(r => r.json());
        const esDepartamento = departamentos.some(d => d.dep_desc === fuenteActual);
        
        if (esDepartamento) {
            setFuenteType('departamento');
            const depto = departamentos.find(d => d.dep_desc === fuenteActual);
            if (depto) {
                document.getElementById("fuenteDepartamento").value = depto.dep_id.toString();
            }
        } else {
            setFuenteType('texto');
            document.getElementById("fuenteTexto").value = fuenteActual;
        }
    }
    
    // Determinar el tipo de categor√≠a y setear valores
    if (categoriaActual) {
        const cadenas = await fetch("/videos/api/cadenas").then(r => r.json());
        const esCadena = cadenas.some(c => c.espcad_cad_desc === categoriaActual);
        
        if (esCadena) {
            setCategoriaType('cadena');
            const cadena = cadenas.find(c => c.espcad_cad_desc === categoriaActual);
            if (cadena) {
                document.getElementById("categoriaCadena").value = cadena.espcad_cad_id.toString();
            }
        } else {
            setCategoriaType('texto');
            document.getElementById("categoriaTexto").value = categoriaActual;
        }
    }
}

function closeModal() {
