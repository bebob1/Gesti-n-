}

// Form submit para editar video
document.getElementById("editForm").addEventListener("submit", async function (e) {
    e.preventDefault();

    const videoId = document.getElementById("videoId").value;
    let fuenteOrigen = '';
    let categoria = '';
    
    if (currentFuenteType === 'departamento') {
        fuenteOrigen = document.getElementById("fuenteDepartamento").value;
    } else {
        fuenteOrigen = document.getElementById("fuenteTexto").value.trim();
    }
    
    if (currentCategoriaType === 'cadena') {
        categoria = document.getElementById("categoriaCadena").value;
    } else {
        categoria = document.getElementById("categoriaTexto").value.trim();
    }

    try {
        const res = await fetch(`/videos/api/${videoId}`, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
                invid_fuente_origen: fuenteOrigen,
                invid_categoria: categoria
            })
        });

        const data = await res.json();

        if (data.success) {
            showAlert("Video actualizado exitosamente", "success");
            closeModal();
            setTimeout(() => location.reload(), 800);
        } else {
            showAlert(data.message || "Error al actualizar video", "error");
        }
    } catch (err) {
        console.error('Error al actualizar:', err);
        showAlert("Error al actualizar video", "error");
    }
});

