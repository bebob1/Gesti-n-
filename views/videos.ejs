// Form submit para crear video
document.getElementById("createForm").addEventListener("submit", async function (e) {
    e.preventDefault();

    const videoId = document.getElementById("createVideoId").value.trim();
    const titulo = document.getElementById("createTitulo").value.trim();
    const fechaPublicacion = document.getElementById("createFechaPublicacion").value;
    const url = document.getElementById("createUrl").value.trim();
    
    let depId = '';
    if (createDepartamentoType === 'departamento') {
        depId = document.getElementById("createDepartamento").value;
    }
    
    let espcadId = '';
    if (createCadenaType === 'cadena') {
        espcadId = document.getElementById("createCadena").value;
    }

    if (!videoId || !titulo || !fechaPublicacion || !url) {
        showAlert("Por favor complete todos los campos obligatorios", "error");
        return;
    }

    try {
        const res = await fetch(`/videos/api/create`, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
                invid_video_id: videoId,
                invid_titulo: titulo,
                invid_published_at: fechaPublicacion,
                invid_url: url,
                dep_id: depId || null,
                espcad_id: espcadId || null
            })
        });

        const data = await res.json();

        if (data.success) {
            showAlert("Video creado exitosamente", "success");
            closeCreateModal();
            setTimeout(() => loadVideos(), 800);
        } else {
            showAlert(data.message || "Error al crear video", "error");
        }
    } catch (err) {
        console.error('Error al crear:', err);
        showAlert("Error al crear video", "error");
    }
});

