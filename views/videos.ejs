        }
    }

    if (!videoId || !titulo || !fechaPublicacion || !url) {
        showAlert("Por favor complete todos los campos obligatorios", "error");
        return;
    }

    try {
        const res = await fetch(`/videos/api/create`, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
                invid_video_id: videoId,
                invid_titulo: titulo,
                invid_published_at: fechaPublicacion,
