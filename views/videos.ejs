        } else {
            // Si no hay departamento, limpiar el select
            const deptoSelect = document.getElementById("departamento");
            if (deptoSelect) {
                deptoSelect.value = '';
            }
        }
        
        if (espcadIdActual && espcadIdActual !== '' && espcadIdActual !== 'null' && espcadIdActual !== 'undefined') {
            setCadenaType('cadena');
            const cadenaSelect = document.getElementById("cadena");
            if (cadenaSelect) {
                cadenaSelect.value = espcadIdActual.toString();
            }
        } else {
            // Si no hay cadena, limpiar el select
            const cadenaSelect = document.getElementById("cadena");
            if (cadenaSelect) {
                cadenaSelect.value = '';
            }
        }
    } catch (error) {
        console.error('Error al cargar datos del modal:', error);
        showAlert("Error al cargar los datos. Verifique la conexi√≥n.", "error");
    }
}

function closeModal() {
    document.getElementById("editModal").style.display = "none";
}

// Form submit para editar video
document.getElementById("editForm").addEventListener("submit", async function (e) {
    e.preventDefault();

    const videoId = document.getElementById("videoId").value;
    const currentDeptoId = document.getElementById("currentDeptoId").value;
    const currentEspcadId = document.getElementById("currentEspcadId").value;
    const deptoId = document.getElementById("departamento").value;
    const espcadId = document.getElementById("cadena").value;

    // Usar valores actuales si no se seleccion√≥ ninguno nuevo
    const finalDeptoId = deptoId || currentDeptoId || null;
    const finalEspcadId = espcadId || currentEspcadId || null;

    try {
        const res = await fetch(`/videos/api/${videoId}`, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
                dep_id: finalDeptoId,
                espcad_id: finalEspcadId
            })
        });

        const data = await res.json();

        if (data.success) {
            showAlert("Video actualizado exitosamente", "success");
            closeModal();
            setTimeout(() => loadVideos(), 800);
        } else {
            showAlert(data.message || "Error al actualizar video", "error");
        }
    } catch (err) {
        console.error('Error al guardar:', err);
        showAlert("Error al guardar cambios", "error");
    }
});

// Cerrar modales al hacer clic fuera de ellos
window.onclick = function(event) {
    const createModal = document.getElementById("createModal");
    const editModal = document.getElementById("editModal");
    
    if (event.target == createModal) {
        closeCreateModal();
    }
    if (event.target == editModal) {
        closeModal();
    }
}
