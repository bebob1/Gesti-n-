// Form submit para editar foro
document.getElementById("editForm").addEventListener("submit", async function (e) {
    e.preventDefault();

    const foroId = document.getElementById("foroId").value;
    const depId = document.getElementById("departamento").value;
    const escaId = document.getElementById("cadena").value;

    if (!depId && !escaId) {
        showAlert("Por favor seleccione al menos departamento o cadena", "error");
        return;
    }

    try {
        const res = await fetch(`/foros/api/${foroId}`, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
                info_dep_id: depId || null,
                esca_id: escaId || null
            })
        });

        const data = await res.json();

        if (data.success) {
            showAlert("Foro actualizado exitosamente", "success");
            closeModal();
            setTimeout(() => location.reload(), 800);
        } else {
            showAlert(data.message || "Error al actualizar foro", "error");
        }
    } catch (err) {
        console.error('Error al actualizar:', err);
        showAlert("Error al actualizar foro", "error");
    }
});

