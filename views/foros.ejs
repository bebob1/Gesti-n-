<script>
let currentPage = 1;
let currentLimit = 20;
let totalPages = 1;
let totalCount = 0;
let isLoading = false;
let currentDepartamentoType = 'departamento';
let currentCadenaType = 'cadena';
let searchTimeout;

document.addEventListener('DOMContentLoaded', function() {
    loadFilterOptions();
    loadForos();
    
    document.getElementById('searchInput').addEventListener('input', function() {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => {
            currentPage = 1;
            loadForos();
        }, 500);
    });
    
    document.getElementById('filterID').addEventListener('input', function() {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => {
            currentPage = 1;
            loadForos();
        }, 500);
    });
    
    document.getElementById('filterFechaDesde').addEventListener('change', () => {
        currentPage = 1;
        loadForos();
    });
    
    document.getElementById('filterFechaHasta').addEventListener('change', () => {
        currentPage = 1;
        loadForos();
    });
    
    document.getElementById('filterDepartamento').addEventListener('change', () => {
        currentPage = 1;
        loadForos();
    });
    
    document.getElementById('filterCadena').addEventListener('change', () => {
        currentPage = 1;
        loadForos();
    });
});

async function loadFilterOptions() {
    try {
        const res = await fetch('/foros/api/filter-options');
        const options = await res.json();
        
        const deptoSelect = document.getElementById('filterDepartamento');
        options.departamentos.forEach(depto => {
            const option = document.createElement('option');
            option.value = depto;
            option.textContent = depto;
            deptoSelect.appendChild(option);
        });
        
        const cadenaSelect = document.getElementById('filterCadena');
        options.cadenas.forEach(cadena => {
            const option = document.createElement('option');
            option.value = cadena;
            option.textContent = cadena;
            cadenaSelect.appendChild(option);
        });
    } catch (err) {
        console.error('Error cargando opciones de filtros:', err);
    }
}

async function loadForos() {
    if (isLoading) return;
    
    isLoading = true;
    showLoading();
    
    try {
        const params = new URLSearchParams({
            page: currentPage,
            limit: currentLimit,
            searchText: document.getElementById('searchInput').value,
            filterID: document.getElementById('filterID').value,
            filterFechaDesde: document.getElementById('filterFechaDesde').value,
            filterFechaHasta: document.getElementById('filterFechaHasta').value,
            filterDepartamento: document.getElementById('filterDepartamento').value,
            filterCadena: document.getElementById('filterCadena').value
        });
        
        const res = await fetch(`/foros/api/foros?${params}`);
        const data = await res.json();
        
        if (data.success) {
            totalPages = data.totalPages;
            totalCount = data.totalCount;
            renderForos(data.foros);
            renderPagination();
            updateResultsInfo(data.foros.length, totalCount);
        } else {
            showAlert('Error al cargar foros', 'error');
        }
    } catch (err) {
        console.error('Error:', err);
        showAlert('Error al cargar foros', 'error');
    } finally {
        isLoading = false;
        hideLoading();
    }
}

function renderForos(foros) {
    const tbody = document.getElementById('forosTableBody');
    tbody.innerHTML = '';
    
    if (foros.length === 0) {
        document.getElementById('forosTable').style.display = 'none';
        document.getElementById('noResults').style.display = 'block';
        return;
    }
    
    document.getElementById('forosTable').style.display = 'table';
    document.getElementById('noResults').style.display = 'none';
    
    foros.forEach(foro => {
        const tr = document.createElement('tr');
        tr.innerHTML = `
            <td>${foro.info_foro_id}</td>
            <td>${foro.info_titulo}</td>
            <td>${foro.info_autor}</td>
